<h3 class="ui header">{{t "forms.i-i-s-k-hakhakhakha-клиент-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наим
      class=(if (v-get validationModel "наим" "isInvalid") "error")
      label=(t "forms.i-i-s-k-hakhakhakha-клиент-e.наим-caption")
      data-test-i-i-s-k-hakhakhakha-клиент-e-наим=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наим" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерТел
      class=(if (v-get validationModel "номерТел" "isInvalid") "error")
      label=(t "forms.i-i-s-k-hakhakhakha-клиент-e.номерТел-caption")
      data-test-i-i-s-k-hakhakhakha-клиент-e-номерТел=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерТел" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-hakhakhakha-клиент-e.дР-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дР
      class=(if (v-get validationModel "дР" "isInvalid") "error")
      data-test-i-i-s-k-hakhakhakha-клиент-e-дР=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дР" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-hakhakhakha-клиент-e.банкДан-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.банкДан
      relationName="банкДан"
      projection="БанкДанL"
      title=(t "forms.i-i-s-k-hakhakhakha-клиент-e.банкДан-caption")
      readonly=readonly
      componentName="банкДанLookup"
      class=(if (v-get validationModel "банкДан" "isInvalid") "error")
      data-test-i-i-s-k-hakhakhakha-клиент-e-банкДан=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "банкДан" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.банкДан.номКарт
      class=(if (v-get validationModel.банкДан "номКарт" "isInvalid") "error")
      label=(t "forms.i-i-s-k-hakhakhakha-клиент-e.банкДан.номКарт-caption")
      data-test-i-i-s-k-hakhakhakha-клиент-e-банкДан-номКарт=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.банкДан "номКарт" "message")}}
  </div>
</form>
